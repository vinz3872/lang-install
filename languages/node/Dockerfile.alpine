ARG LANGUAGE
ARG VERSION
FROM $LANGUAGE:$VERSION-alpine
ARG USER_NAME
ARG USER_UID
ARG USER_GID
RUN deluser node
RUN addgroup -g $USER_GID $USER_NAME
RUN adduser -D -G $USER_NAME -u $USER_UID $USER_NAME
ARG ADDITIONAL_PACKAGES
RUN if [ ! -z $ADDITIONAL_PACKAGES ]; then apk add $ADDITIONAL_PACKAGES; fi